#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
	srand(time(0));

	bool whilevar = true;
	int answer;
	int counter = 0;
	const int MODIFIER = 50; //change this for range of numbers

	while (whilevar)
	{
		int num1 = rand() % MODIFIER + 1;
		int num2 = rand() % MODIFIER + 1;

		do
		{
			cout << "What is " << num1 << " + " << num2 << "?" << endl;
			cin >> answer;
		} while (answer != num1 + num2 || );

		counter++;

		if (counter == 5) //change this for amount of times before prompt
		{
			char w;
			cout << "Continue? (y/n)" << endl;
			cin >> w;
			if (w == 'n')
				whilevar = false;
			else
				counter = 0;
		}
	}

	cout << endl;
	cout << " Good job! " << endl;
	cout << endl;
	cout << "Not quite, try again. " << endl;
	return 0;
}
